<?xml version="1.0" encoding="utf-8"?>
<Object>
	<!-- 忍者関連の定数 -->
	<Ninja>
		<!-- 忍者の動きに関する定数 -->
		<Param>
			<!-- 走りの加速度（毎秒） -->
			<RunAccel>5.0</RunAccel>

			<!-- 走りの最高速度（毎秒） -->
			<RunMaxVelocity>30.0</RunMaxVelocity>
			
			<!-- ダッシュの加速度（毎秒） -->
			<DashAccel>10.0</DashAccel>
			
			<!-- 走りの最高速度（毎秒） -->
			<DashMaxVelocity>60.0</DashMaxVelocity>
			
			<!-- ジャンプ力 -->
			<JumpPower>70.0f</JumpPower>
			
			<!-- 空中でジャンプできる回数 -->
			<AerialJumpCount>1</AerialJumpCount>
		</Param>
		<!-- 物理演算に関する定数 -->
		<FixtureDef>
			<!-- 密度（kg/m^2） -->
			<Density>0.0</Density>
			
			<!-- 摩擦（[0, 1]） -->
			<Friction>0.0</Friction>
			
			<!-- 反発力（[0, 1]） -->
			<Restitution>0.0</Restitution>
		</FixtureDef>
	</Ninja>
	<!-- 地形関連の定数（ステージの設定ファイルに隔離するべきかも） -->
	<Terrain>
		<!-- 物理演算に関する定数 -->
		<FixtureDef>
			<!-- 密度（kg/m^2） -->
			<Density>0.0</Density>
			
			<!-- 摩擦（[0, 1]） -->
			<Friction>0.0</Friction>
			
			<!-- 反発力（[0, 1]） -->
			<Restitution>0.0</Restitution>
		</FixtureDef>
	</Terrain>
</Object>
